@model SIAA.CORE_LOGIN

@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Login</strong></h1>
                    <div class="description">
                        <p>
                            Sistema Integral de Administracion de Alcaldia
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h4>Digite su usuario y contraseña para ingresar al sistema:</h4>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-key"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <div class="form-group">
                            @Html.LabelFor(a => a.USUARIO, new { @class = "sr-only", @for = "form-username" })
                            @Html.TextBoxFor(a => a.USUARIO, new { @type = "text", @name = "form-username", @placeholder = "Usuario...", @class = "form-username form-control", @id = "form-username" })
                            @Html.ValidationMessageFor(a => a.USUARIO)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(a => a.CONTRASENA, new { @class = "sr-only", @for = "form-password" })
                            @Html.TextBoxFor(a => a.CONTRASENA, new { @type = "password", @name = "form-password", @placeholder = "Contraseña...", @class = "form-password form-control", @id = "form-password" })
                            @Html.ValidationMessageFor(a => a.CONTRASENA)
                        </div>
                        <button type="submit" class="btn">Loguearse</button>
                        @if (@ViewBag.Error != null)
                        {
                            @ViewBag.Error
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}